<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="genres"
            type="com.example.mockproject.view.main.fragmentelement.song.element.genres.GenresModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_margin="15dp"
        android:paddingTop="30dp"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/nameGenres"
            style="@style/text_style_genres"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18dp"
            android:text="@{genres.nameGenres}"
            tools:text="Classical" />

        <TextView
            android:id="@+id/numSongs"
            style="@style/text_style_genres"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="13dp"
            android:text="@{genres.numSongs}"
            tools:text="56 Songs" />

    </LinearLayout>
</layout>